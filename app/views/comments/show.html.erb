<h3><%= @article.title %></h3>
<h4>By: <%= @article.user.name %></h4>
<p><%= @article.content %></p>

<h3>Comments</h3>

<% @article.comments.each do |comment| %>
  <div class="comment">
    <%= comment.user %> says:
    <br>
    <%= comment.content %>
  </div>
<% end %>

<%= link_to 'Add Comment', new_article_comment_path %>

<%= link_to 'Back', articles_path %>