<div class="list-group">
  <% @articles.each do |article| %>
    <%= link_to article_path(article), class: "list-group-item" do %>
      <h4 class="list-group-item-heading"><%= article.title %></h3>
      <% if can? :update, article %>
        <div class="btn-group btn-group-sm">
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-default", role: "button" %>
          <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Delete article?" }, class: "btn btn-default", role: "button" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>